<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>
<div class="left">
  <ul>
    <li>
      <a href="/admin/product/add">
        <img src="/img/admin/shipment-add-solid.svg" alt="" />ADD PRODUCT
      </a>
    </li>
    <li>
      <a href="/admin/product/list"><img src="/img/admin/list.svg" alt="" />LIST
        PRODUCT</a>
    </li>
    <li>
      <a href="/admin/product/trash">
        <img src="/img/admin/history.svg" alt="" />
        HISTORY
      </a>
    </li>
  </ul>
  <div class="back-home">
    <img src="/img/admin/home.svg" alt="" />
    <a href="/">Back Home</a>
  </div>
</div>
<div class="right">
  <div class="heading">
    <div class="title">
      <img src="/img/admin/shipment-remove.svg" alt="" />Trash
    </div>
    <div class="heading-text">Product deletion history</div>
  </div>
  <div class="list-trash">
    {{#each newData}}
      <div class="card-trash">
        <div class="img-trash">
          <img src="{{firstImage this.image}}" alt="Product Image" />
        </div>
        <div class="name-trash">
          <h1
            style="font-size: 13px !important; font-weight: 700 !important;"
          >{{this.nameProduct}}</h1>
        </div>
        {{! <div class="date-trash">
          <p>30-2-2023 23:49</p>
        </div> }}
        <div class="action-trash">
          <a class="btn-restore" data-id="{{this._id}}" href="#"><img
              src="/img/admin/restore.svg"
              alt=""
            /></a>
          <a
            class="btn-delete"
            data-id="{{this._id}}"
            data-bs-toggle="modal"
            data-bs-target="#delete-course-modal"
            href="#"
          ><img src="/img/admin/remove.svg" alt="" /></a>
        </div>
      </div>
    {{/each}}

  </div>
</div>
<div
  class="modal fade"
  id="delete-course-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Bạn có chắc muốn xóa</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        When you click "Confirm" the course will be permanently deleted and
        cannot be retrieved!!!
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <button
          id="btn-delete-coure"
          type="button"
          class="btn btn-danger"
        >Delete</button>
      </div>
    </div>
  </div>
</div>

<form method="POST" id="delete-product-form"></form>
<form method="POST" id="restore-product-form"></form>

<script src="/js/handleTrash.js"></script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>